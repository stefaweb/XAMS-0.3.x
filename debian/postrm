#!/bin/sh
# postrm script for xams
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule
db_version 2.0

case "$1" in
    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
	;;

    remove)
	# dbconfig-common
        . /usr/share/dbconfig-common/dpkg/postrm.mysql
	dbc_go xams $@
	;;

    purge)
	rm /etc/apache2/conf.d/xams > /dev/null 2>&1 || true
	rm /etc/exim4/sa-exim.conf > /dev/null 2>&1 || true
        rm /etc/xams/localdomains.cdb > /dev/null 2>&1 || true
        rm /var/log/xams/*.log* > /dev/null 2>&1 || true
        rm -r /usr/share/xams/cache/* > /dev/null 2>&1 || true

	# Remove xams UID and GID
	userdel xams  > /dev/null 2>&1 || true
	deluser Debian-exim mail > /dev/null 2>&1 || true
	deluser clamav Debian-exim > /dev/null 2>&1 || true
	groupdel xams > /dev/null 2>&1 || true

	# Unset change
	sed -i 's/MAXDAEMONS=.*/MAXDAEMONS=40/g' /etc/courier/imapd
	sed -i 's/MAXPERIP=.*/MAXPERIP=20/g' /etc/courier/imapd
	sed -i 's/ENABLED=1/ENABLED=0/g' /etc/default/spamassassin
	sed -i 's/IMAP_MAILBOX_SANITY_CHECK=.*/IMAP_MAILBOX_SANITY_CHECK=1/g' /etc/courier/imapd
	if [ -e /etc/exim4/sa-exim.conf.dist ]; then
	    mv /etc/exim4/sa-exim.conf.dist /etc/exim4/sa-exim.conf
	fi

	# Unset change in package courier-authdaemon
	update-rc.d courier-authdaemon defaults > /dev/null 2>&1 || true
	/etc/init.d/apache2 reload > /dev/null 2>&1 || true
	rm /var/run/xams/authdaemon-xams.pid > /dev/null 2>&1 || true
	rm -r /etc/xams > /dev/null 2>&1 || true
	;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
	;;
esac

/etc/init.d/courier-imap start > /dev/null 2>&1 || true
/etc/init.d/courier-imap-ssl start > /dev/null 2>&1 || true
/etc/init.d/courier-pop start > /dev/null 2>&1 || true
/etc/init.d/courier-pop-ssl start > /dev/null 2>&1 || true
/etc/init.d/spamassassin start > /dev/null 2>&1 || true
/etc/init.d/exim4 start > /dev/null 2>&1 || true

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

db_stop

exit 0
